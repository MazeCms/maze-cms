            <settings>
                <option value="0">НЕТ</option>
                <option value="1">ДА</option>
            </settings>
        </element>
        <element type="ui\text\TextInput" title="Минимальная длина строки" name="min">
            <options>
                <class>form-control</class>
            </options>
        </element>
        <element type="ui\text\TextInput" title="Максимальная длина строки" name="max">
            <options>
                <class>form-control</class>
            </options>
        </element>
    </params>
	
</metaOptions>
